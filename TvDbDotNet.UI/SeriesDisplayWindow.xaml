<Window x:Class="TvDbDotNet.UI.SeriesDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SeriesDisplayWindow" Height="300" Width="300">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="seriesTemplate">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Path=Name}" Foreground="Black" FontSize="16" />
                    <TextBlock Text="{Binding Path=Overview}" TextWrapping="Wrap" Foreground="DimGray" MaxHeight="100" />
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="searchResultsListBox" 
                 ItemTemplate="{StaticResource seriesTemplate}" AlternationCount="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
    </Grid>
</Window>
